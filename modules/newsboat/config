# Reload all feed automatically on startup
auto-reload yes

# Display the percentage of the article, like vim
display-article-progress yes

# Use the w3m web browser
browser "w3m %u"

# Vim Mode
bind-key k up
bind-key j down
unbind-key ^U
unbind-key ^D
bind-key ^U pageup
bind-key ^D pagedown

# Custom theme
color listnormal white default
color listfocus black color6
color listfocus_unread black color6
color info default color8
